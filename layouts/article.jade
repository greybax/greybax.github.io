extend page

block title
  title #{title.text}

block meta
  meta(property="description" content=desc.text)

  meta(name="og:url"         content=url)
  if (image)
    meta(name="og:image"     content=image.src)
  meta(name="og:title"       content=title.text)
  meta(name="og:description" content=desc.text)

block content
  a(href="/").back-link Back
  
  article
    h1 !{title.html}
    if date
      i: time !{date.text}
    | !{content.html}
